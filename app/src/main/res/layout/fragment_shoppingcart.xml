<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.teapopo.life.viewModel.welfare.CartListViewModel" />
        <variable
            name="handler"
            type="com.teapopo.life.view.fragment.welfare.ShoppingCartListFragment" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_shoppingcart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="购物车"
        android:textSize="@dimen/goodsdetail_title"
        android:gravity="center"/>
</android.support.v7.widget.Toolbar>
    <com.teapopo.life.view.customView.RecyclerView.SuperRecyclerView
        android:id="@+id/rv_shoppingcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_shoppingcart"
        app:data="@{viewModel.data}"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_btn_homecomment">
        <CheckBox
            android:id="@+id/checkBox_selectAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="全选"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/x5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.cardsGoodsOverView.goods_price}"
                android:textColor="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.cardsGoodsOverView.goods_points}"
                android:textColor="@color/orange"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_cart_settlement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.cardsGoodsOverView.goods_num}"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:onClick="@{handler.clickSettleShoppingCart}"/>
    </LinearLayout>
</RelativeLayout>
    </layout>