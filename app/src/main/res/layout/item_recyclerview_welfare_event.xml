<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="event"
            type="com.teapopo.life.model.welfare.Event"/>
    </data>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="350dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_splash"
            android:id="@+id/item_welfare_iv"
            app:imageUrl="@{event.coverImg}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{event.name}"
            android:textSize="21dp"
            android:layout_below="@id/item_welfare_iv"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_welfare_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_welfare_tv"
            android:text="@{event.adWords}"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00起"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@id/item_welfare_iv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>
    </RelativeLayout>

</layout>