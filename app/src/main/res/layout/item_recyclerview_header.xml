<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="recommendArticleViewModel"
            type="com.teapopo.life.viewModel.RecomendArticleViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/cardMarginVertical"
            android:layout_marginLeft="@dimen/cardMarginHorizontal"
            android:layout_marginRight="@dimen/cardMarginHorizontal"
            android:layout_marginTop="@dimen/cardMarginVertical"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.teapopo.life.view.customView.HackyViewPager
                    android:id="@+id/viewpager_toparticle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:adapter="@{recommendArticleViewModel.getTabFragmentAdapter()}"
                    app:fragments="@{recommendArticleViewModel.fragments}"
                    app:titles="@{recommendArticleViewModel.titles}"/>

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator_circle_viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>