<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.teapopo.life.viewModel.Member.MemberLikeItemViewModel" />

    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_memberlike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:layout_margin="@dimen/x8"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="发布时间"
                        android:text="@{viewModel.memberLike.date}"
                        android:layout_marginLeft="@dimen/x5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="点赞文章数"
                        android:layout_alignParentRight="true"
                        android:text="@{viewModel.memberLike.likeCounts}"/>
                </RelativeLayout>
                <com.jaeger.ninegridimageview.NineGridImageView
                    android:id="@+id/gv_nineimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:imgGap="4dp"
                    app:showStyle="grid"
                    app:singleImgSize="150dp"
                    android:layout_marginTop="@dimen/y10"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y3"
            android:background="@drawable/line"
            android:layout_below="@id/cv_memberlike"/>
    </RelativeLayout>
</layout>