<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.teapopo.life.viewModel.Member.MemberPostItemViewModel" />

    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="发布时间"
                android:layout_marginLeft="@dimen/x16"
                android:text="@{viewModel.memberArticle.publish_time}"
                android:textColor="@color/gray_light"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:layout_margin="@dimen/x8"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/x8">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="文章正文"
                        android:text="@{viewModel.memberArticle.excerpt}"
                        android:textSize="@dimen/member_content_size"
                        android:textColor="@color/black"/>
                    <com.jaeger.ninegridimageview.NineGridImageView
                        android:id="@+id/gv_nineimage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:imgGap="4dp"
                        app:showStyle="grid"
                        app:singleImgSize="150dp"
                        android:layout_marginTop="@dimen/y10"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y10">
                        <TextView
                            android:id="@+id/tv_comentnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:hint="评论数"
                            android:text="@{viewModel.memberArticle.comment_num}"/>
                        <ImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_comment"
                            android:layout_toLeftOf="@id/tv_comentnum"
                            android:layout_marginRight="@dimen/member_icon_margin"/>
                        <TextView
                            android:id="@+id/tv_likenum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/iv_comment"
                            android:hint="点赞数"
                            android:text="@{viewModel.memberArticle.collect_num}"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_like"
                            android:layout_toLeftOf="@id/tv_likenum"
                            android:layout_marginRight="@dimen/member_icon_margin"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y3"
                android:background="@drawable/line"
                android:layout_marginTop="@dimen/y10"/>
        </LinearLayout>
    </RelativeLayout>
</layout>